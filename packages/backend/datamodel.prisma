type News {
  id: ID! @unique
  title: String!
  slug: String! @unique
  content: String!
  previewImage: String
  isFeatured: Boolean
  writer: User!
  tags: [Tag!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type User {
  id: ID! @unique
  name: String!
  username: String! @unique
  email: String @unique
  newsItems: [News!]!
  githubToken: String!
  profilePic: String
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Talk {
  id: ID! @unique
  title: String!
  slug: String! @unique
  previewImage: String!
  isFeatured: Boolean
  speaker: User
  length: Int
  tags: [Tag!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Tag {
  id: ID! @unique
  name: String! @unique
  talks: [Talk!]!
  news: [News!]!
}
